{
    "manifest_version": 3,
    "name": "MastoScraper",
    "version": "0.2.1",
    "description": "A browser extension to scrape Mastodon search results",
    "homepage_url": "https://fmoncomble.github.io/mastoscraper/",
    "permissions": ["tabs", "activeTab", "storage"],
    "host_permissions": ["<all_urls>"],
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon-32.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{9aa42986-9406-4e93-b1d1-d9e7ab95faec}",
            "update_url": "https://github.com/fmoncomble/mastoscraper/releases/latest/download/update_manifest.json"
        }
    }
}
