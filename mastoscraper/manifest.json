{
    "manifest_version": 3,
    "name": "MastoScraper",
    "version": "0.8",
    "description": "A browser extension to scrape Mastodon search results",
    "homepage_url": "https://fmoncomble.github.io/mastoscraper/",
    "permissions": ["storage", "identity"],
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon-32.png"
    }
}
